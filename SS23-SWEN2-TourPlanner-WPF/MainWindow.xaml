<Window x:Class="SS23_SWEN2_TourPlanner_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Views;assembly=Views"
        xmlns:local="clr-namespace:SS23_SWEN2_TourPlanner_WPF"
        mc:Ignorable="d"
        Title="Tour Planner" Height="450" Width="800">
    <Grid>
        <DockPanel>

            <views:Menu DockPanel.Dock="Top" />
            <views:Search DockPanel.Dock="Top" />
            <views:TourList DockPanel.Dock="Left" />
            
            <DockPanel DockPanel.Dock="Right">
                <views:TourDetails DockPanel.Dock="Top" MinHeight="200" />
                <views:TourLogs DockPanel.Dock="Top" />
            </DockPanel>


        </DockPanel>

    </Grid>
</Window>

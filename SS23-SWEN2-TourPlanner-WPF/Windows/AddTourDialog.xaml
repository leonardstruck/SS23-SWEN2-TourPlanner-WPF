<Window x:Class="SS23_SWEN2_TourPlanner_WPF.Windows.AddTourDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SS23_SWEN2_TourPlanner_WPF.Windows"
        mc:Ignorable="d"
        Title="Add Tour" Height="350" Width="500">
    <StackPanel Margin="5">
        <Label Content="Name:" />
        <TextBox x:Name="TBName"/>
        
        <Label Content="Description:" Margin="0 10 0 0" />
        <TextBox x:Name="TBDescription"/>

        <Label Content="From:" Margin="0 10 0 0" />
        <TextBox x:Name="TBFrom" />

        <Label Content="To:" Margin="0 10 0 0" />
        <TextBox x:Name="TBTo" />

        <Label Content="Transport Mode:" Margin="0 10 0 0" />
        <ComboBox x:Name="CBTransportMode">
            <ComboBoxItem Name="WALKING" Content="Walking" IsSelected="True"/>
            <ComboBoxItem Name="BICYCLE" Content="Biking" />
            <ComboBoxItem Name="AUTO" Content="Car" />
        </ComboBox>

        <Button Content="Save Tour" Margin="0 10 0 0" Height="40"/>
    </StackPanel>
</Window>
